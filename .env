# =====================================================

# API
API_PORT=8000
ADMIN_API_KEY=dev-admin
LOG_LEVEL=info
ENV=dev
PYTHONPATH=/app
DEBUG=true

# Datenbank
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=luna

# Qdrant
QDRANT_HOST=qdrant
QDRANT_HTTP=6333
QDRANT_GRPC=6334

# Ollama
OLLAMA_HOST=http://ollama:11434
OLLAMA_PORT=11434
OLLAMA_KEEP_ALIVE=0         # nie entladen
OLLAMA_NUM_PARALLEL=4       # Threads parallel
EMBED_MODEL=nomic-embed-text
GENERATE_MODEL=llama3.1:8b

# Tika
TIKA_HOST=http://tika:9998
TIKA_PORT=9998

# MinIO (optional)
MINIO_API=9000
MINIO_CONSOLE=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=sim

# Simulation
SIM_SMARTMETER_INTERVAL_SEC=60
SIM_MARKET_INTERVAL_SEC=300
SIM_MARKETS=EEX,APX
SIM_PRODUCTS=BASE,PEAK

# Netzwerk
NETWORK_NAME=luna-net

# Cache
CACHE_DIR=/tmp/luna-cache
CACHE_TTL=3600

#RAM BOOSTS
QDRANT__STORAGE__DISK_CACHE_MB=8192
QDRANT__STORAGE__WAL_CAPACITY_MB=128
QDRANT__LOG_LEVEL=WARN

