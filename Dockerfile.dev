FROM python:3.11-slim

# Installiere SystemabhÃ¤ngigkeiten
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl build-essential libpq-dev git && \
    rm -rf /var/lib/apt/lists/*

# Setze das Arbeitsverzeichnis
WORKDIR /app

# Kopiere und installiere die Requirements
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Kopiere alle Projektdateien
COPY . .

# Setze Umgebungsvariablen
ENV PYTHONUNBUFFERED=1 \
    PYTHONOPTIMIZE=1 \
    PYTHONPATH=/app \
    UVICORN_WORKERS=4 \
    UVICORN_TIMEOUT_KEEP_ALIVE=15 \
    PATH="/root/.local/bin:$PATH"

# Standard-Befehl, der beim Start des Containers ausgefÃ¼hrt wird
CMD ["bash", "-c", "uvicorn api.main:app --host 0.0.0.0 --port 8000 --log-level info"]

